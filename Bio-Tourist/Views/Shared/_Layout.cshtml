<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/Design.css" />
    <link rel="stylesheet" href="~/Content/DesignIndex.css" />
    <link rel="stylesheet" href="~/Content/DesignContact.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />


    <title>@ViewBag.Title - BioTourist</title>


    @Styles.Render("~/Content/css") <!-- Contient le code bootstrap.css-->
    @Scripts.Render("~/bundles/modernizr") <!-- Contient le code Bootstrap.js-->

</head>


<body>
    <a href="https://icons8.com/icon/43402/shopping-basket">Shopping Basket icon by Icons8</a>

    <header>
        <div class="navbar navbar-inverse navbar-fixed-top" id="colorHeader">

            <nav>
                <div class="Container">

                    <div class="nav navbar-nav">

                        <img src="~/Content/Images/LogoBio.png" title="BioTourist" alt="BioTourist" class="Logo" />
                        <img src="~/Content/Images/SloganBio.png" title="SloganBioTourist" alt="SloganBioTourist" class="Slogan" />

                    </div>


                    <div class="navbar-collapse collapse">
                        
                  
            
                        <nav id="PersonnaliserMenus" class="mx-auto">
                           
                            <ul class="nav navbar-nav">

           

                                <li>@Html.ActionLink("Accueil", "Index", "Home")</li>

                                <li>@Html.ActionLink("S'inscrire", "Registration", "Home")</li>

                                <li>@Html.ActionLink("Connexion", "Connection", "Home")</li>

                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

   

                            </ul>
            
                        </nav>

                    </div>

                    <div class="MenusReduit">

                        <!-- Permet de créer un menus en raccourcis réduction écran-->

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span> <!--petite barre-->
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>


                </div>
            </nav>
        </div>
    </header>

    <div>
        @RenderBody()


    </div>


    <div class="ContainerFooter">

        <footer>

            <img src="~/Content/Images/LogoBio.png" title="BioTourist" alt="BioTourist" class="Logo" />

            <p>&copy; @DateTime.Now.Year - BioTourist - Le bio à porter de main 2019</p>

        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
  


</body>
</html>
