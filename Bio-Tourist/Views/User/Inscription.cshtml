    </div>

    <div>
        @Html.LabelFor(m => m.NUM_STREET)
        @Html.TextBoxFor(m => m.NUM_STREET)
        @Html.ValidationMessageFor(m => m.NUM_STREET)
    </div>

    <div>
        @Html.LabelFor(m => m.NAME_STREET)
        @Html.TextBoxFor(m => m.NAME_STREET)
        @Html.ValidationMessageFor(m => m.NAME_STREET)
    </div>

    <div>
        @Html.LabelFor(m => m.POSTAL_CODE)
        @Html.TextBoxFor(m => m.POSTAL_CODE)
        @Html.ValidationMessageFor(m => m.POSTAL_CODE)
    </div>

    <div>
        @Html.LabelFor(m => m.CITY_USER)
        @Html.TextBoxFor(m => m.CITY_USER)
        @Html.ValidationMessageFor(m => m.CITY_USER)
    </div>

    <div>
        @Html.LabelFor(m => m.COUNTRY_USER)
        @Html.TextBoxFor(m => m.COUNTRY_USER)
        @Html.ValidationMessageFor(m => m.COUNTRY_USER)
    </div>

    <input type="submit" value="Inscription" />
