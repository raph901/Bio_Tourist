@using System.Web.UI.WebControls
@using Bio_Tourist.Controllers
@model Bio_Tourist.Models.User

<link rel="stylesheet" href="~/Content/main.css" />
<script language="javascript" type="text/javascript" src="../../Scripts/javascript.js"></script>
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
<script type="text/javascript"></script>
<link rel="stylesheet" href="https://unpkg.com/esri-leaflet-geocoder@2.3.2/dist/esri-leaflet-geocoder.css" integrity="sha512-IM3Hs+feyi40yZhDH6kV8vQMg4Fh20s9OzInIIAc4nx7aMYMfo+IenRUekoYsHZqGkREUgx0VvlEsgm7nCDW9g==" crossorigin="">
<script src="https://unpkg.com/esri-leaflet-geocoder@2.3.2/dist/esri-leaflet-geocoder.js" integrity="sha512-8twnXcrOGP3WfMvjB0jS5pNigFuIWj4ALwWEgxhZ+mxvjF5/FBPVd5uAxqT8dd2kUmTVK9+yQJ4CmTmSg/sXAQ==" crossorigin=""></script>
<script>
    function getMyLocation() {
        var url = "https://eu1.locationiq.com/v1/search.php?key=b45059544453b6&q=17+rue+curnonsky&format=json";
        $.get(url, function (data) { var coordo = { Latitude: data.lat } }
</script>
@using (Html.BeginForm("Register", "User"))
{

    <div class="page-wrapper Color_User p-t-180 p-b-100 font-robo">
        <div class="wrapper wrapper--w960">
            <div class="card card-2">
                <div class="card-heading"></div>
                <div class="card-body">
                    <div id="map"></div>
                    <button type="button" value="SetLocation" onclick="getMyLocation()">AddLocation</button>

                    <h2 class="title">Inscription</h2>
                    <form method="POST">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        @Html.DropDownListFor(m => m.ID_GENDER, UserController.DROPDOWN_LISTS())
                                        @Html.ValidationMessageFor(m => m.ID_GENDER)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        @Html.DropDownListFor(m => m.ID_ROLE, UserController.DROPDOWN_LIST())
                                        @Html.ValidationMessageFor(m => m.ID_ROLE)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.LAST_NAME_USER, new { @class = "input--style-2", placeholder = "Nom", required = " " })
                                    @Html.ValidationMessageFor(m => m.LAST_NAME_USER)
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.FIRST_NAME_USER, new { @class = "input--style-2", placeholder = "Prénom", required = "required" })
                                    @Html.ValidationMessageFor(m => m.FIRST_NAME_USER)
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.EMAIL_USER, new { @class = "input--style-2", placeholder = "Email", required = "required" })
                                    @Html.ValidationMessageFor(m => m.EMAIL_USER)
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.PASSWORD_USER, new { @class = "input--style-2", placeholder = "Mot de Passe", name = "PASSWORD_USER", id = "PASSWORD_USER", type = "PASSWORD" })
                                    @Html.ValidationMessageFor(m => m.PASSWORD_USER)
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.CONFIRMING_PASSWORD, new { @class = "input--style-2", placeholder = "Confirmer le mot de Passe", type = "PASSWORD", name = "CONFIRMING_PASSWORD", id = "CONFIRMING_PASSWORD", onblur = "checkPassword();" })
                                    @Html.ValidationMessageFor(m => m.CONFIRMING_PASSWORD)
                                    <span id='message'></span>
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Inscription" class="btn btn--radius btn--green" />
                    </form>
                </div>
            </div>
        </div>
    </div>
}
