@model Bio_Tourist.Models.User
<!-- Required meta tags-->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="description" content="Colorlib Templates">
<meta name="author" content="Colorlib">
<meta name="keywords" content="Colorlib Templates">

<!-- Title Page-->
<title>Au Register Forms by Colorlib</title>

<!-- Icons font CSS-->
<link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
<link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
<!-- Font special for pages-->
<link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">

<!-- Vendor CSS-->
<link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
<link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

<!-- Main CSS-->
<link href="~/Content/main.css" rel="stylesheet" media="all">
<link href="~/Content/bootstrap.css" rel="stylesheet">
@using (Html.BeginForm("Verify", "User"))
{
    <div class="page-wrapper Color_User p-t-180 p-b-100 font-robo ">
        <div class="wrapper wrapper--w960 ">
            <div class="card card-2">
                <div class="card-heading hidden-xs"></div>
                <div class="card-body ">
                    <h2 class="title">Connection</h2>
                    <form method="POST">
                        <div class="input-group ">
                            @Html.LabelFor(m => m.EMAIL_USER)
                            @Html.TextBoxFor(m => m.EMAIL_USER, new { htmlAttributes = new { @class = "input--style-2" } })
                            @Html.ValidationMessageFor(m => m.EMAIL_USER)
                        </div>

                        <div class="input-group ">
                            @Html.LabelFor(m => m.PASSWORD_USER)
                            @Html.PasswordFor(m => m.PASSWORD_USER, new { htmlAttributes = new { @class = "input--style-2" } })
                            @Html.ValidationMessageFor(m => m.PASSWORD_USER)
                        </div>
                        <div class="p-t-30">
                            <input type="submit" value="Connexion" class="btn btn--radius btn--green" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
